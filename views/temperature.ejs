<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('includes/favicon.ejs') -%>
</head>

<body>
    <%- include('includes/nav.ejs') -%>

    <h1>This ist the Pool Monitor Temperature Unit.</h1>
    <div>
        Connected Temperature Sensors: <%= sensors.length %>
    </div>
    <% if (typeof currentSensor !=='undefined' ) { %>
        <div>
            Got a temperature from: <%= currentSensor.id %><br />
                <%= currentSensor.temperature %>
        </div>
        <% } %>
            <div>
                <% sensors.forEach(s=> { %>
                    <div>
                        <a href="./<%= s.id %>">
                            <button>
                                <%= s.id %>
                            </button>
                        </a>
                    </div>
                    <% }); %>
            </div>
</body>

</html>